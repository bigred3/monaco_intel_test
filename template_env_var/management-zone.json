{
  "name": "{{ .name }}",
  "rules": [
    {
      "enabled": true,
      "type": "ME",
      "attributeRule": {
        "entityType": "PROCESS_GROUP",
        "conditions": [
          {
            "key": "PROCESS_GROUP_TAGS",
            "operator": "EQUALS",
            "tag": "environment:{{ .environment }}"
          }
        ],
        "pgToHostPropagation": false,
        "pgToServicePropagation": true
      }
    }
  ]
}